<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#e0e0e0" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>

